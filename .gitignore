!/app/languages/index.php
!/app/mu-plugins/index.php
!/app/plugins/index.php
!/app/themes/index.php
!/app/uploads/index.php

# Query Monitor's custom DB class symlink
/app/db.php

# Local debug log
/app/debug.log

