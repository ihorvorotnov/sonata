###
# Ignored files and directories
###

# PhpStorm
/.idea

# Git releases
/release

# Composer packages
/vendor

# Local environment
/.env

# WordPress core
/core

# Additional WordPress and 3rd party code, languages and
# everything else that shouldn't be versioned
/app/languages
/app/mu-plugins
/app/plugins
/app/themes
/app/upgrade
/app/uploads

